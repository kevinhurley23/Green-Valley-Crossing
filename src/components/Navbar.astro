---
const tallNav = 180;
const shortNav = 80;
---

<div id="navbar-background"></div>
<div id="desktop-nav">
  <a href="/">Home</a>
  <a href="/#welcome-section">Welcome</a>
  <a href="/#contact-section">Contact Us</a>
  <img src="img/GVC Logo.png" alt="Green Valley Crossing logo" id="logo" />
  <a href="/our-story">About Us</a>
  <a href="/what-to-expect">Plan Your Visit</a>
  <a href="/bulletin">Connect</a>
</div>
<div id="mobile-toggle-container">
  <div class="container">
    <i id="mobile-toggle" class="fa-solid fa-bars"></i>
  </div>
</div>
<div id="mobile-nav">
  <div class="container">
    <a href="/">Home</a>
    <a href="/#welcome-section">Welcome</a>
    <a href="/#contact-section">Contact Us</a>
    <a href="/our-story">About Us</a>
    <a href="/what-to-expect">Plan Your Visit</a>
    <a href="/connect">Connect</a>
  </div>
</div>

<style lang="scss">
  @import "../styles/_variables.scss";

  #navbar-background {
    background-color: $gray;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 0;
  }
  #desktop-nav {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
    position: fixed;
    top: 0;
    z-index: 10;
    width: 100%;
    box-sizing: border-box;
    @media screen and (max-width: $mobile) {
      display: none;
    }
    #logo {
      width: 300px;
      @media screen and (max-width: $tablet) {
        display: none;
      }
    }
  }
  #mobile-toggle {
    color: white;
    font-size: 28px;
    position: fixed;
    top: 27px;
    z-index: 10;
    @media screen and (min-width: $mobile) {
      display: none;
    }
  }
  #mobile-nav {
    position: fixed;
    z-index: 20;
    background: linear-gradient($gray, $dgray);
    width: 100%;
    padding: 3rem 0;
    @media screen and (min-width: $mobile) {
      display: none;
    }
    .container {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    a {
      font-size: 2rem;
    }
  }
  a {
    color: white;
    text-decoration: none;
    text-transform: uppercase;
  }
</style>

<script define:vars={{ shortNav, tallNav }}>
  const logo = document.querySelector("#logo");
  const background = document.querySelector("#navbar-background");
  const toggle = document.querySelector("#mobile-toggle");
  const mobileNav = document.querySelector("#mobile-nav");
  const mobileNavHeight = mobileNav.offsetHeight;
  const time = 300;
  let animationInProgress = false;
  let menuIsOpen = false;

  window.innerWidth > 1150
    ? (background.style.height = tallNav + "px")
    : (background.style.height = shortNav + "px");

  mobileNav.style.top = -mobileNavHeight - shortNav + "px";

  function hideLogo() {
    animationInProgress = true;

    const animation = logo.animate(
      {
        width: 0,
        opacity: 0,
      },
      time
    );
    background.animate({ height: shortNav + "px" }, time);
    animation.addEventListener("finish", () => {
      logo.style.width = "0px";
      logo.style.opacity = 0;
      background.style.height = shortNav + "px";
    });
    setTimeout(() => {
      if (animationInProgress) {
        logo.style.display = "none";
      }
    }, time * 0.5);
  }

  function showLogo() {
    if (window.innerWidth > 1150) {
      animationInProgress = false;

      logo.style.display = "block";
      const animation = logo.animate(
        {
          width: "300px",
          opacity: 1,
        },
        time
      );
      background.animate({ height: tallNav + "px" }, time);
      animation.addEventListener("finish", () => {
        logo.style.width = "300px";
        logo.style.opacity = 1;
        background.style.height = tallNav + "px";
      });
    }
  }

  window.addEventListener("scroll", () => {
    if (window.scrollY > 0) {
      hideLogo();
    } else {
      showLogo();
    }
  });

  toggle.addEventListener("click", function () {
    if (menuIsOpen) {
      menuIsOpen = false;
      toggle.classList.remove("fa-bars");
      toggle.classList.add("fa-x");
      mobileNav.animate({ top: shortNav + "px" }, time);
      setTimeout(() => {
        mobileNav.style.top = shortNav + "px";
      }, time * 0.9);
    } else {
      menuIsOpen = true;
      toggle.classList.remove("fa-x");
      toggle.classList.add("fa-bars");
      mobileNav.animate({ top: -mobileNavHeight - shortNav + "px" }, time);
      setTimeout(() => {
        mobileNav.style.top = -mobileNavHeight - shortNav + "px";
      }, time * 0.9);
    }
  });
</script>

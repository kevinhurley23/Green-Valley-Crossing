---
import Layout from "../layouts/Layout.astro"
---

<Layout>
  <main>
    <div class="container default-text">
      <h1>I Am New</h1>
      <img src="img/sanctuary-wide.jpeg" alt="">
      <p>Thanks for joining us at Green Valley Crossing! Please provide as much information as you're comfortable. We'll make sure to get you connected to all that's happening at GVC!</p>
      <form action="" id="form">
        <div class="row two">
          <label>
            First Name
            <input type="text" name="fname" required>
          </label>
          <label>
            Last Name
            <input type="text" name="lname" required>
          </label>
        </div>
        <label>
          Address Line 1
          <input type="text" name="address1">
        </label>
        <label>
          Address Line 2
          <input type="text" name="address2">
        </label>
        <div class="row three">
          <label>
            City
            <input type="text" name="city">
          </label>
          <label>
            State
            <input type="text" name="state">
          </label>
          <label>
            Zip Code
            <input type="text" name="zip">
          </label>
        </div>
        <label>
          Email
          <input type="email" name="email" required>
        </label>
        <label>
          Phone
          <input type="text" name="phone">
        </label>
        <label>
          How can we pray for you?
          <textarea name="prayer" rows="5"></textarea>
        </label>
        <p>
          Add me to your text list</br>
          <span style="font-size:0.8em;">You can opt out anytime by texting STOP</span>
        </p>
        <label class="check">
          <input type="checkbox">
          Yes
        </label>
        <button>Submit</button>
      </form>
    </div>
  </main>
</Layout>

<style lang="scss">
  @import "../styles/_variables.scss";

  #form {
    .row {
      gap: 0 2rem;
      flex-wrap: wrap;
      &.two label {
        flex: 1 1 300px;
      }
      &.three label {
        flex: 1 1 200px;
        @media (max-width: $mobile) {
          flex: 0 0 100%;
        }
      }
    }
    label {
      font-size: 1rem;
      &.check {
        display: flex;
        align-items: center;
        input {
          width: 1.2em;
          height: 1.2em;
          margin: 0 10px 0 0;
          accent-color: $gray4;
        }
      }
    }
    input:not([type=checkbox]), textarea {
      margin: 5px 0 20px;
      padding: 5px;
      font-size: 1.2rem;
      width: 100%;
      background-color: $gray1;
      outline: 1px solid $gray4;
      border: none;
      &:focus-visible {
        outline: 2px solid $gray4;
      }
    }
    p {
      margin: 0 0 10px;
    }
    button {
      font-size: 1rem;
      color: white;
      background-color: $gray4;
      margin-top: 25px;
      padding: 15px 30px;
      border-radius: 30px;
      border: none;
      cursor: pointer;
      transition: 0.3s ease;
      &:hover {
        background-color: $gray3;
      }
    }
  }

</style>